<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Juno" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/open_sans_italic</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.MyApp.Button.Crypto.BTC" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="backgroundTint">@color/btc_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Widget.MyApp.Button.Crypto.ETH" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="backgroundTint">@color/eth_bg</item>
    </style>
    <style name="Widget.MyApp.Button.Crypto.Option" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/option_bg</item>
    </style>
    <style name="Widget.MyApp.Button.Share.Valid" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/valid_bg</item>
    </style>
    <style name="Widget.MyApp.Button.Share.Inalid" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/invalid_bg</item>
    </style>
</resources>